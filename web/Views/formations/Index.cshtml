@model IEnumerable<domain.entities.formation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">Tous les Formations</div>
        <!-- Zero Configuration-->
        <div class="panel panel-default">
            <div class="panel-heading "></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4"></div><a href="@Url.Action( "Create","formations")" class="mb-sm btn btn-inverse  col-4"><em class="fa fa-pencil-square-o">Ajouter Formation</em></a>
                </div>
                <div class="table-responsive b0">
                    <table id="datatable1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <center> @Html.DisplayNameFor(model => model.titre) </center>
                                </th>
                                <th>
                                    <center> @Html.DisplayNameFor(model => model.description) </center>
                                </th>

                                <th>
                                    <center> @Html.DisplayNameFor(model => model.img) </center>
                                </th>
                               
                                <th>
                                    <center>  @Html.DisplayNameFor(model => model.date_debut) </center>
                                </th>
                                <th>
                                    <center>  @Html.DisplayNameFor(model => model.date_fin) </center>
                                </th>
                                
                                
                                
                                <th>
                                    <center> @Html.DisplayNameFor(model => model.type) </center>
                                </th>
                                <th>
                                    <center>Formateur</center>
                                </th>
                                <th><center>Action</center></th>
                            </tr>
                            </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <center>   @Html.DisplayFor(modelItem => item.titre) </center>
                                    </td>
                                    <td>
                                        <center>  @Html.DisplayFor(modelItem => item.description) </center>
                                    </td>
                                    <td>
                                        <center><img src="@item.img" /> </center>
                                    </td>
                                    <td>
                                        <center> @Html.DisplayFor(modelItem => item.date_debut) </center>
                                    </td>
                                    <td>
                                        <center> @Html.DisplayFor(modelItem => item.date_fin) </center>
                                    </td>
                                                                     
                                   
                                    <td>
                                        <center> @Html.DisplayFor(modelItem => item.type)</center>
                                    </td>
                                    <td>
                                        <center>  @Html.DisplayFor(modelItem => item.formateur.nomPrenom) </center>
                                    </td>
                                    <td>
                                        <center>
                                            <a href="@Url.Action( "Create","Invitation", new { id=item.id })" class="mb-sm btn btn-success"><em class="fa fa-plus"></em></a>
                                            <a href="@Url.Action( "Edit","formations", new { id=item.id })" class="mb-sm btn btn-warning"><em class="fa fa-cog"></em></a>

                                            <a onclick="Delet(@item.id,'@item.titre')" class="mb-sm btn btn-danger"><em class="icon-trash"></em></a>

                                        </center>
                                    </td>
                                </tr>
                            }

                            </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</section>


@section scripts{

    <script>
        $(function () {
            var sm = '@TempData["SM"]';
            if (sm != '')
                alertify.success(sm);
        })

        function Delet(id,desc)
        {
            alertify.confirm('supression de Formation','Vous Voulez vraiment supprimer '+desc+" ?",function(){
                window.location.href = ' @Url.Action("Delete", "formations")/'+id;
            },null)
        }

    </script>

}
