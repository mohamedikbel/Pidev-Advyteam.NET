@model IEnumerable<domain.entities.test>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<section>
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">Tous les Test</div>
        <!-- Zero Configuration-->
        <div class="panel panel-default">
            <div class="panel-heading "></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4"></div><a href="@Url.Action( "Create","Test")" class="mb-sm btn btn-inverse  col-4"><em class="fa fa-pencil-square-o">Ajouter Test</em></a>
                </div>
                <div class="table-responsive b0">
                    <table id="datatable1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <center>
                                        @Html.DisplayNameFor(model => model.description)
                                    </center>
                                </th>
                                <th>
                                    <center>
                                        Image
                                    </center>
                                </th>
                                <th>
                                    <center>
                                        Formation
                                    </center>
                                </th>
                                <th><center>Action</center></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <center>
                                        @Html.DisplayFor(modelItem => item.description)
                                        </center>
                                    </td>
                                    <td>
                                        <center>
                                            <img src=" @Html.DisplayFor(modelItem => item.img) " />
                                        </center>

                                    </td>
                                    <td>

                                        @if (item.formation != null)
                                        {
                                            <center>
                                                @Html.DisplayFor(modelItem => item.formation.titre)
                                            </center>
                                        }
                                        else
                                        {
                                                <center>
                                                    <a href="@Url.Action( "AddForm","Test", new { id=item.id })" class="mb-sm btn btn-success"><em class="fa fa-plus-square"></em></a>
                                                </center>
                                                }
</td>

                                    <td>
                                        <center>
                                            <a href="@Url.Action( "Edit","Test", new { id=item.id })" class="mb-sm btn btn-warning"><em class="fa fa-cog"></em></a>

                                            <a href="@Url.Action( "Details","Test", new { id=item.id })" class="mb-sm btn btn-info"><em class="icon-magnifier"></em></a>
                                            <a onclick="Delet(@item.id,'@item.description')" class="mb-sm btn btn-danger"><em class="icon-trash"></em></a>
                                        </center>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                  </div>

                </div>
            </div>
        </div>
    </section>


                @section scripts{

                    <script>
        $(function () {
            var sm = '@TempData["SM"]';
            if (sm != '')
                alertify.success(sm);
        })

        function Delet(id,desc)
        {
            alertify.confirm('supression de Test','Vous Voulez vraiment supprimer '+desc+" ?",function(){
                window.location.href = ' @Url.Action("Delete", "Test")/'+id;
            },null)
        }

                    </script>

                }
