@model web.Models.TForm

@{
    ViewBag.Title = "Affecter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">Affecter Test</div>
        <!-- Zero Configuration-->
        <div class="panel panel-default">
            <div class="panel-heading ">

                <a href="@Url.Action("Index", "Test")" class="btn btn-labeled btn-default">
                    <span class="btn-label">
                        <i class="fa fa-arrow-left"></i>
                    </span> PRECEDENT
                </a>

            </div>
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.idT)


                        <div class="form-group">
                          
                            <label class="control-label col-md-2">Formation :</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.idf, new SelectList(ViewBag.formation, "id", "titre"), "Selectoner Formation")
                                @Html.ValidationMessageFor(model => model.idf, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr />

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="mb-sm btn btn-inverse "><em class="fa fa-pencil-square-o">Affecter</em></button>

                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(function () {
        $("#idf").addClass("form-control m-b");
    });
    </script>
}
