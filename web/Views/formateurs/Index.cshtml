@model IEnumerable<domain.entities.formateur>

@{
    ViewBag.Title = "Formateurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">Tous les Formateur</div>
        <!-- Zero Configuration-->
        <div class="panel panel-default">
            <div class="panel-heading "></div>
            <div class="panel-body">
                <div class="form-horizontal">
                    @using (Html.BeginForm())
                    {
                        
                       
                        <div class="input-group">
                            @Html.TextBox("searchString", "", new { @class = "form-control"  })
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-default">OK</button>
                            </span>
                        </div>
                    }
                </div>
                    
                    <hr />
                <div class="row">
                    <div class="col-md-4"></div><a href="@Url.Action( "Create","formateurs")" class="mb-sm btn btn-inverse  col-4"><em class="fa fa-pencil-square-o">Ajouter Formateur</em></a>
                </div>
                    <div class="table-responsive b0">
                        
                        <br />
                        <br />
                        <table class="table table-striped table-hover">
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.nomPrenom)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.note)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.img)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.specialiste)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.nomPrenom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.note)
                                    </td>
                                    <td>
                                        @{ string path = "~/Content/Uploads/" + item.img;}
                                        <img src="@Url.Content(path)" width="100" height="100" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.specialiste)
                                    </td>
                                    <td>
                                        <a href="@Url.Action( "Edit","formateurs", new { id=item.id })" class="mb-sm btn btn-warning"><em class="fa fa-cog"></em></a>

                                        <a onclick="Delet(@item.id,'@item.nomPrenom')" class="mb-sm btn btn-danger"><em class="icon-trash"></em></a>
 
                                    </td>
                                </tr>
                                            }

                        </table>
                    </div>
                </div>

        </div>
    </div>
</section>

@section scripts{

    <script>
        $(function () {
            var sm = '@TempData["SM"]';
            if (sm != '')
                alertify.success(sm);
        })

        function Delet(id,desc)
        {
            alertify.confirm('supression de Formateur','Vous Voulez vraiment supprimer '+desc+" ?",function(){
                window.location.href = ' @Url.Action("Delete", "formateurs")/'+id;
            },null)
        }

    </script>

}