
@{
    ViewBag.Title = "Details Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">@ViewBag.q.libelle</div>
        <!-- Zero Configuration-->
        <div class="panel panel-default">
            <div class="panel-heading "><a href="@Url.Action("Details", "Test",new { id=@ViewBag.q.test.id })" class="btn btn-labeled btn-default">
    <span class="btn-label">
        <i class="fa fa-arrow-left"></i>
    </span> PRECEDENT
</a> |Toutes les Reponse</div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-4"></div><a href="@Url.Action( "Create", "Reponce", new { id=@ViewBag.q.id })" class="mb-lg btn-lg btn btn-inverse  col-4"> <em class="fa fa-pencil-square-o"></em> Ajouter Reponse </a>
                </div>
                <hr />
                <div class="table-responsive b0">

                    <table id="datatable1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th><center>Reponse</center></th>
                                <th><center>Vrai ?</center></th>
                                <th><center>Action</center></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in ViewBag.lsr)
                            {
                                <tr>
                                    <td><center>@item.libelle</center></td>
                                    <td>
                                        @if (item.isValid)
                                        {
                                           <center> @Html.Label("Vrai") </center>
                                        }
                                        else
                                        {
                                           <center> @Html.Label("Faux")</center>
                                        }




                                    </td>
                                    <td>
                                        <center>
                                        <a href="@Url.Action("Edit", "Reponce", new { id=@item.id })" class="mb-sm btn btn-warning"><em class="fa fa-cog"></em></a>
                                        <a onclick="Delet(@item.id)" class="mb-sm btn btn-danger"><em class="icon-trash"></em></a>
                                        </center>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</section>

@section scripts{

    <script>
        $(function () {
            var sm = '@TempData["SM"]';
            if (sm != '')
                alertify.success(sm);
        })

        function Delet(id)
        {
            alertify.confirm('supression de Reponse','Vous Voulez vraiment supprimer cette Reponse ? ',function(){
                window.location.href = ' @Url.Action("Delete", "Reponce")/'+id+'/'+@ViewBag.q.id;
            },null)
        }

    </script>

}
